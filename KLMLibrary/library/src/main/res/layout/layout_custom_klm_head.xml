<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/klm_topbar_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp169">

    <com.kalemao.library.custom.KLMEduSohoIconTextView
        android:id="@+id/klm_topbar_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/white"/>

    <com.kalemao.library.custom.KLMEduSohoIconTextView
        android:id="@+id/klm_topbar_left"
        android:layout_width="wrap_content"
        android:minWidth="@dimen/sp140"
        android:layout_height="match_parent"
        android:singleLine="true"
        android:gravity="center"
        android:textColor="@color/white"/>

    <com.kalemao.library.custom.KLMEduSohoIconTextView
        android:id="@+id/klm_topbar_right"
        android:layout_width="wrap_content"
        android:minWidth="@dimen/sp140"
        android:layout_height="match_parent"
        android:singleLine="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:textColor="@color/white"/>

    <com.kalemao.library.custom.KLMEduSohoIconTextView
        android:id="@+id/klm_topbar_right_left"
        android:layout_width="@dimen/sp140"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/klm_topbar_right"
        android:gravity="center"
        android:textColor="@color/white"/>
</RelativeLayout>
