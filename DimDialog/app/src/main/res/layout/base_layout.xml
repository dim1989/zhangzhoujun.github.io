<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/base_warning_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/base_warning_title"
        android:layout_width="match_parent"
        android:layout_height="49dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:padding="10dp"
        android:singleLine="true"
        android:text="grewg"
        android:textColor="@color/btn_text333"
        android:textSize="19sp"
        android:textStyle="normal|bold"/>

    <TextView
        android:id="@+id/base_warning_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/base_warning_title"
        android:fadeScrollbars="true"
        android:gravity="left"
        android:lineSpacingExtra="4dp"
        android:minHeight="60dip"
        android:paddingBottom="10dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:scrollbars="vertical"
        android:text="fgdsafads"
        android:textColor="@color/btn_text333"
        android:textSize="14sp"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/base_warning_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="55dip"
        android:layout_below="@+id/base_warning_content"
        android:background="@drawable/dialog_background"
        android:orientation="horizontal">

        <Button
            android:id="@+id/base_warning_btn_cancle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:layout_weight="1"
            android:background="@drawable/base_btn_selector"
            android:text="取消"
            android:textColor="@color/btn_text333"/>

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_marginTop="5dip"
            android:background="@color/fengexian"/>

        <Button
            android:id="@+id/base_warning_btn_comfire"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:layout_weight="1"
            android:background="@drawable/base_btn_selector"
            android:text="确定 "
            android:textColor="@color/btn_text333"/>

    </LinearLayout>

</RelativeLayout>
