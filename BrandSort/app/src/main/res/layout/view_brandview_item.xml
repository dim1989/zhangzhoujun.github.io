<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="190px"
    android:layout_height="50px"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/view_brandview_item_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_brand_item_ok"/>
    
    <ImageView
        android:id="@+id/view_brandview_item_status"
        android:layout_width="23px"
        android:layout_height="23px"
        android:background="@mipmap/img_brand_delete"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/view_brandview_item_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="万色益+"
        android:textColor="#FFA27234"
        android:textSize="20px"
        android:gravity="center"/>

</RelativeLayout>
