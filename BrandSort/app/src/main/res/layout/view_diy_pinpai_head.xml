<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/view_diy_pinpai_icon"
        android:layout_width="19px"
        android:layout_height="23px"
        android:layout_marginBottom="34px"
        android:layout_marginTop="45px"
        android:background="@mipmap/img_vip_fenzu" />

    <TextView
        android:id="@+id/view_diy_pinpai_name"
        android:layout_width="wrap_content"
        android:layout_height="40px"
        android:layout_marginLeft="11px"
        android:layout_marginTop="35px"
        android:layout_toRightOf="@+id/view_diy_pinpai_icon"
        android:text="自营品牌推荐 "
        android:textColor="#333333"
        android:textSize="28px" />

    <RelativeLayout
        android:id="@+id/view_diy_pinpai_more_layout"
        android:layout_width="wrap_content"
        android:layout_height="70px"
        android:layout_alignParentRight="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/view_diy_pinpai_more_icon"
            android:layout_width="22px"
            android:layout_height="22px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="31px"
            android:layout_marginTop="44px"
            android:src="@mipmap/img_icon_more" />

        <TextView
            android:id="@+id/view_diy_pinpai_more_name"
            android:layout_width="wrap_content"
            android:layout_height="28px"
            android:layout_marginRight="5px"
            android:layout_marginTop="42px"
            android:layout_toLeftOf="@+id/view_diy_pinpai_more_icon"
            android:text="还有10个品牌等候翻牌"
            android:textColor="#999999"
            android:textSize="20px" />

    </RelativeLayout>

</RelativeLayout>
